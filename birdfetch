#!/bin/bash
. /etc/os-release

void="\e[0m"

if grep -q dwm ~/.xinitrc; then
    wm="dwm"
elif grep -q bspwm ~/.xinitrc; then
    wm="bspwm"
elif grep -q qtile ~/.xinitrc; then
    wm="qtile"
elif grep -q xmonad ~/.xinitrc; then
    wm="xmonad"
elif grep -q i3 ~/.xinitrc; then
    wm="i3"
elif grep -q openbox ~/.xinitrc; then
    wm="openbox"
else
    wm="some wm"
fi


if grep -q Arch /etc/os-release; then
    line1="   /\    "
    line2="  _\ \   "
    line3=" /    \  "
    line4="/  ()  \ "
    line5=" -^  ^-  "

    col1="\e[31m"
    col2="\e[36m"
    col3="\e[36m"
elif grep -q Debian /etc/os-release; then
    line1="  _--\   "
    line2=" / .  )  "
    line3=" (  -    "
    line4="  \      "
    line5="   ^     "

    col1="\e[34m"
    col2="\e[31m"
    col3="\e[31m"
elif grep -q Fedora /etc/os-release; then
    line1="     ##  "
    line2="    #  # "
    line3="  __##-  "
    line4=" (  #    "
    line5=" -##)    "

    col1="\e[31m"
    col2="\e[34m"
    col3="\e[34m"
elif grep -q FreeBSD /etc/os-release; then
    line1=" ^     ^ "
    line2="/_\-~-/_\\"
    line3="|       |"
    line4="|       |"
    line5=" \_____/ "

    col1="\e[33m"
    col2="\e[31m"
    col3="\e[31m"
elif grep -q Gentoo /etc/os-release; then
    line1=" _-'''-_ "
    line2="(   O   \\"
    line3=" -_     /"
    line4="  /   _/ "
    line5=" (__.~   "

    col1="\e[36m"
    col2="\e[35m"
    col3="\e[35m"
elif grep -q Manjaro /etc/os-release; then
    line1="###~~ ## "
    line2="## ## ## "
    line3="## ## ## "
    line4="## ## ## "
    line5="## ## ## "

    col1="\e[31m"
    col2="\e[32m"
    col3="\e[32m"
elif grep -q Mint /etc/os-release; then
    line1="--------\ "
    line2="|   _ _  |"
    line3=" | / | \ |"
    line4=" | |   | |"
    line5=" \_______|"

    col1="\e[33m"
    col2="\e[32m"
    col3="\e[32m"
elif grep -q OpenBSD /etc/os-release; then
    line1=" ./\---^ "
    line2="<  O  O \\"
    line3="|    3  >"
    line4=" <     -/"
    line5="  \-\/-  "

    col1="\e[34m"
    col2="\e[33m"
    col3="\e[33m"
elif grep -q Ubuntu /etc/os-release; then
    line1="    _-   "
    line2="  / __ \O"
    line3="O( (  ) )"
    line4="  \ -- / "
    line5="    ~-O  "

    col1="\e[33m"
    col2="\e[31m"
    col3="\e[31m"
elif grep -q Void /etc/os-release; then
    line1="     ###\\"
    line2=" #      #"
    line3=" #  ##  #"
    line4=" #      #"
    line5=" \###    "

    col1="\e[31m"
    col2="\e[32m"
    col3="\e[32m"
else    
    line1="   __    "
    line2="  |××|   "
    line3=" ( \/ )  "
    line4="  |--|   "
    line5="  ^  ^   "

    col1="\e[31m"
    col2="\e[33m"
    col3="\e[34m"
fi

echo -e "${col3}${line1} ${col1}\e[1m${USER}@$(cat /proc/sys/kernel/hostname)${void}" 
echo -e "${col3}${line2} ${col2}\e[1mos     ${void}${PRETTY_NAME}"
echo -e "${col3}${line3} ${col2}\e[1mkernel ${void}$(cat /proc/sys/kernel/osrelease)"
echo -e "${col3}${line4} ${col2}\e[1mshell  ${void}${SHELL##*/}"
echo -e "${col3}${line5} ${col2}\e[1mwm     ${void}${wm}"
